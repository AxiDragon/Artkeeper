<Window x:Class="Artkeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Artkeeper"
        mc:Ignorable="d"
        BorderThickness="0"
        Title="Artkeeper" Height="391" Width="688"
        Background="White"
        FontFamily="/Resources/#Comfortaa">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="0" Background="{StaticResource LightAccent}" CornerRadius="5,16,16,5">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="0" ShadowDepth="3" Direction="-90" Color="{StaticResource DarkAccentColor}"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            
        <ComboBox Name="WindowSelector" Width="328" Height="31" Margin="45,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Style="{StaticResource Comfortaa}" Name="TimerLabel" Width="328" Margin="45,79,0,0" HorizontalAlignment="Left" Height="49" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5"/>
        <Button Style="{StaticResource ButtonStyle}" Content="Start Timer!" Width="148" Margin="378,40,0,0" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Click="TimerButton_ClickStart"/>
        </Grid>
    </Grid>
</Window>
