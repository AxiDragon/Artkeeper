<Window x:Class="Artkeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Artkeeper"
        mc:Ignorable="d"
        BorderThickness="0"
        ResizeMode="NoResize"
        Title="Artkeeper" Height="160" Width="440">
    <Grid>
        <ComboBox Name="WindowSelector" Width="200" Height="20" Margin="45,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Name="TimerLabel" Width="200" Margin="45,66,0,0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Content="Start Timer!" Width="118" Margin="250,40,0,0" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Click="TimerButton_ClickStart"/>
    </Grid>
</Window>
