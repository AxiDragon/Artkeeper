<Window x:Class="Artkeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Artkeeper"
        mc:Ignorable="d"
        Title="Artkeeper" Height="450" Width="800">
    <Grid>
        <ComboBox Name="WindowSelector" Width="120" Height="40" Margin="45,41,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" SelectedValue="1">
        </ComboBox>
        <Label Name="TimerLabel" Width="275" Margin="45,80,0,0" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Content="Start Timer!" Width="150" Margin="170,40,0,0" HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Click="TimerButton_ClickStart"/>
    </Grid>
</Window>
